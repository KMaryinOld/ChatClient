<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sasisa.chat.sasisachat.FullscreenLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:gravity="right"
            android:weightSum="1"
            android:textAlignment="center"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Логин"
                android:id="@+id/loginTextView"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginText"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.75"
                android:background="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout2"
            android:layout_above="@+id/enterButton"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:id="@+id/passwordTextView"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordText"
                android:layout_weight="0.75"
                android:background="#ffffff"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <Button
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:id="@+id/enterButton"
            android:layout_gravity="center_horizontal"
            android:onClick="enterButtonOnClick"
            android:background="@drawable/sasisa_button"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:background="@drawable/sasisachatlogo"
            android:layout_above="@+id/linearLayout"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
